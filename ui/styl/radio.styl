@require 'vars.styl'

/* ----- RADIO ----- */

.wrap-container
    display flex
    justify-content center
    align-items center
    flex-wrap wrap

.row-label
    display flex
    flex-direction row
    align-items center
    cursor pointer

    & input
        display none

    &__name
        padding 0.5em 0
        flex 1

.radio-label
    justify-content flex-start

.radio-name
    @media $tab
        flex calc(100% - 2.6em)

.radio-btn
    margin 0.6em
    width 0.6em
    height 0.6em
    border 0.3em solid $mainBg
    border-radius 0.6em
    box-shadow 0 0 0 0.1em $radioNA
    transition $trans ease all

.dialog__container .radio-btn
    border-color: $secBg

.label__colored .radio-btn
    box-shadow 0 0 0 0.1em $accent

[type="radio"]:checked + .radio-btn
    background-color $accent
    box-shadow 0 0 0 0.1em $accent

[type="radio"] + .radio__accent::before
    content 'âœ“'
    margin 0.1em
    width 2em
    height 2em
    display flex
    justify-content center
    align-items center
    background-color $accent
    border-radius 0.3em
    color $accent
    font-size 2.5em
    transition $trans ease

    @media $tab
        font-size 1.25em

    @media $pc
        font-size 1em

[type="radio"]:checked + .radio__accent::before
    color $mainBg
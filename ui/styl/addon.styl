@require 'vars.styl'

/* ----- ABOUT ----- */

.about

    &__container
        width 100%
        display flex
        flex-direction column
        align-items center

    &__logo
        padding 2em
        width 5em
        height 5em

    &__text
        padding .5em
        display flex
        justify-content center
        align-items center
        
        @media $pc
            border-top 1px solid $secColor

        & .menu-item__text__name
            @media $mob
                text-align center

            &:first-letter
                color $accent

        & sup
            font-size .5em
// MODULE: Раздел SECTION

@import 'nib'

@require '_vars.styl'
@require '_mixins.styl'

.section
    &:not(:last-of-type)
        border-bottom 1px solid --v.divider

    &__header
        margin b(2)
        flex-basis 100%
        color --v.accent
        text-align: center
        text-transform: uppercase
        fs(1.5)

        @media --q.-sm
            text-align: left